#!/usr/bin/kermit +
  ##!/opt/local/bin/kermit +

set line /dev/tty.usbserial
set speed 38400
set duplex half
set flow none
set carrier-watch off
set send timeout 600 fixed
set transmit prompt 0
set file type binary
set transmit linefeed on

define \%x 1
while 1 {
	run prpgetrecord \%x > /tmp/p1
	transmit /tmp/p1
	increment \%x
	wait 6
}
quit
